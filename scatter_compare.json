{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Comparison of Male vs Female Live Births by State (2000â€“2023)",
    "fontSize": 20
  },
  "width": "container",
  "height": 400,

  "data": { "url": "birth_sex_ethnic_state.csv" },

  "params": [
    {
      "name": "stateFilter",
      "select": {
        "type": "point",
        "fields": ["state"],
        "on": "click",
        "clear": "dblclick"
      },
      "bind": "legend"
    }
  ],

  "transform": [
    { "filter": "datum.ethnicity == 'overall'" },
    {
      "aggregate": [
        { "op": "sum", "field": "abs", "as": "births" }
      ],
      "groupby": ["state", "sex", "date"]
    },
    { "calculate": "year(datum.date)", "as": "year" },
    {
      "pivot": "sex",
      "value": "births",
      "groupby": ["state", "year"]
    },
    { "filter": "isValid(datum.male) && isValid(datum.female)" },
    { "filter": "stateFilter.state == null || datum.state == stateFilter.state" }
  ],

  "mark": {
    "type": "point",
    "filled": true,
    "size": 120,
    "opacity": 0.8
  },

  "encoding": {
    "x": {
      "field": "male",
      "type": "quantitative",
      "title": "Male Live Births",
      "axis": { "titleFontSize": 20, "labelFontSize": 20 }
    },
    "y": {
      "field": "female",
      "type": "quantitative",
      "title": "Female Live Births",
      "axis": { "titleFontSize": 20, "labelFontSize": 20 }
    },
    "color": {
      "field": "state",
      "type": "nominal",
      "title": "State",
      "scale": { "scheme": "tableau10" },
      "legend": {
        "titleFontSize": 20,
        "labelFontSize": 20,
        "symbolSize": 120
      }
    },
    "tooltip": [
      { "field": "state", "title": "State" },
      { "field": "year", "title": "Year" },
      { "field": "male", "title": "Male Births" },
      { "field": "female", "title": "Female Births" }
    ]
  },

  "config": {
    "axis": { "titleFontSize": 20, "labelFontSize": 20 },
    "legend": { "titleFontSize": 20, "labelFontSize": 20 },
    "title": { "fontSize": 20 }
  }
}
